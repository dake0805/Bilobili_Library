<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>librarianListServlet</servlet-name>
        <servlet-class>servlet.LibrarianListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>librarianListServlet</servlet-name>
        <url-pattern>/LibrarianListPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LibrarianAdd</servlet-name>
        <servlet-class>servlet.LibrarianAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LibrarianAdd</servlet-name>
        <url-pattern>/librarian_add.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditLibrarian</servlet-name>
        <servlet-class>servlet.LibrarianEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditLibrarian</servlet-name>
        <url-pattern>/EditLibrarian.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchLibrarian</servlet-name>
        <servlet-class>servlet.LibrarianSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchLibrarian</servlet-name>
        <url-pattern>/SearchLibrarian.do</url-pattern>
    </servlet-mapping>
</web-app>